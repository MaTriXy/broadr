<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/base"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/backtile"    android:cacheColorHint="@android:color/transparent"    android:focusable="true"    android:focusableInTouchMode="true"    android:scaleType="centerCrop"    tools:context=".MainActivity">    <include        android:id="@+id/toolbar"        layout="@layout/toolbar" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_above="@+id/linearLayout"        android:layout_below="@+id/toolbar"        android:alpha="0.9"        android:background="@drawable/row_transparent_back">        <android.support.v4.widget.SwipeRefreshLayout            android:id="@+id/swipe"            android:layout_width="match_parent"            android:layout_height="match_parent">            <android.support.v7.widget.RecyclerView                android:id="@+id/listMessagesView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_above="@+id/etxt_message"                android:layout_alignParentEnd="true"                android:layout_alignParentRight="true"                android:layout_alignParentTop="true" />        </android.support.v4.widget.SwipeRefreshLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/linearLayout"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="false"        android:alpha="0.9"        android:background="@drawable/row_transparent_back"        android:ems="10"        android:weightSum="1">        <EditText            android:id="@+id/etxt_message"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="bottom"            android:hint="@string/main_send_hint"            android:inputType="textShortMessage|textCapSentences|textAutoCorrect"            android:maxHeight="30dp"            android:maxLength="140"            android:maxLines="4"            android:minHeight="@dimen/abc_action_bar_default_height_material"            android:nextFocusLeft="@id/etxt_message"            android:nextFocusUp="@id/etxt_message"            android:scrollbars="vertical"            android:textColor="@android:color/white"            android:textColorHint="@color/accent_material_light"            android:textCursorDrawable="@null">            <requestFocus />        </EditText>        <Button            android:id="@+id/btn_broadcast"            style="?android:attr/buttonStyleSmall"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical|center_horizontal"            android:background="@android:drawable/ic_menu_send" />    </LinearLayout></RelativeLayout>