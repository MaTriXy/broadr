<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:alpha="0.9"
    android:padding="4sp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:minHeight="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/comment_happenedAt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/comment_content"
            android:layout_alignBottom="@+id/comment_content"
            android:gravity="center"
            android:text="Happened At"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@color/wallet_highlighted_text_holo_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8sp"
            android:autoLink="web|email|phone|map"
            android:gravity="center_horizontal|center_vertical|center"
            android:text="Comment Content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView_commentStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/comment_content"
            android:layout_alignRight="@+id/comment_content"
            android:layout_alignTop="@+id/comment_happenedAt"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>